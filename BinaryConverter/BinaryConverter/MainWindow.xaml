<Window x:Class="BinaryConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BinaryConverter"
        mc:Ignorable="d"
        Title="Convert To Binary"
        ResizeMode="CanMinimize"
        Height="500" Width="400">
    
    <StackPanel
        Margin="0,40,0,0">
        
        <TextBlock
            Text="Texto:"
            Margin="40,0,0,0"
            FontSize="17"
        />

        <TextBox
            Name="input_text"
            Margin="40,10,40,0"
            FontSize="17"
        />

        <Button
            Margin="40,10,40,0"
            FontSize="17"
            Click="Convert"
            >
            Converter
        </Button>


        <TextBlock
            Text="Resultado: "
            Margin="40,100,0,0"
            FontSize="17"
            />
        
        <TextBlock
            Name="txt_result"
            Text=""
            Margin="40,10,40,0"
            FontSize="17"
            />
    </StackPanel>
</Window>
